{% extends "layout.twig" %}

{% block content %}

	<div class="col-md-12">
		
		<div class="blog-post">
			<a href="{{ '' | url}}">
				Back to the List
			</a>
			<h2>{{blogPost.title}}</h2>
				{% if blogPost.img_url %}
					<div class="blog-post-image">
						<img src="{{ blogPost.img_url }}" class="img-responsive">
						<br><br>
					</div>
				{% endif %}
				<div class="blog-post-content">
					{{blogPost.content}}
				</div>
		</div>
	
	</div>
				

{% endblock %}